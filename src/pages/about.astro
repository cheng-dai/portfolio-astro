---
import BaseLayout from "@/layouts/BaseLayout.astro";
import Nav from "@/components/landing/Nav.astro";
---

<BaseLayout>
  <Nav />

  <!-- Bio Section -->
  <section class="px-8 md:px-12 pt-8 md:pt-16 pb-16 md:pb-24">
    <h1 class="text-2xl md:text-4xl font-normal leading-snug mb-6">About</h1>
    <div class="max-w-2xl space-y-4 text-black/70">
      <p>
        I'm Cheng Dai — a software engineer turning ideas into real products.
        I build tools that make life easier, and more fun.
      </p>
      <p>
        When I'm not coding, you can find me running trails, reading, or exploring new places.
      </p>
    </div>
  </section>

  <!-- Running Section -->
  <section class="px-8 md:px-12 pb-16 md:pb-24">
    <h2 class="text-xl md:text-2xl font-normal mb-6">Running</h2>
    <div class="rounded-lg border border-black/10 p-6 md:p-8 max-w-2xl">
      <p class="text-black/50 text-sm">Garmin stats coming soon.</p>
    </div>
  </section>

  <!-- Books Section -->
  <section class="px-8 md:px-12 pb-16 md:pb-24">
    <h2 class="text-xl md:text-2xl font-normal mb-6">Books</h2>
    <div class="rounded-lg border border-black/10 p-6 md:p-8 max-w-2xl">
      <p class="text-black/50 text-sm">Reading list coming soon.</p>
    </div>
  </section>

  <!-- Photos Section -->
  <section class="px-8 md:px-12 pb-16 md:pb-24">
    <h2 class="text-xl md:text-2xl font-normal mb-6">Photos</h2>
    <div class="rounded-lg border border-black/10 p-6 md:p-8 max-w-2xl">
      <p class="text-black/50 text-sm">Photo gallery coming soon.</p>
    </div>
  </section>

  <!-- Footer -->
  <footer class="px-8 md:px-12 py-8 border-t border-black/10">
    <div class="flex flex-col md:flex-row items-center justify-between gap-4 text-sm text-black/50">
      <p>Cheng Dai — Software Engineer</p>
      <div class="flex items-center gap-6">
        <a href="mailto:chengdai.dev@gmail.com" class="hover:text-black transition-colors">Email</a>
        <a href="https://github.com/cheng-dai" target="_blank" class="hover:text-black transition-colors">GitHub</a>
        <a href="https://www.linkedin.com/in/chengdai/" target="_blank" class="hover:text-black transition-colors">LinkedIn</a>
      </div>
    </div>
  </footer>
</BaseLayout>
