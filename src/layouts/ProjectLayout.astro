---
import Arrow from "@/components/Arrow.astro";
interface Props {
  name: string;
  description: string[];
  techStacks: string[];
  url: string;
  className?: string;
}
const { name, description, url, className } = Astro.props;
---

<div class={`project-card-inner group h-full rounded-2xl bg-[#e0dad1] p-5 md:p-8 transition-all duration-300 hover:bg-[#d6d0c6] ${className ?? ""}`}>
  <!-- link + toggle -->
  <div class="flex items-center justify-between">
    <a href={url} target="_blank" class="block">
      <p class="flex items-center gap-x-2 text-xl md:text-3xl font-semibold tracking-tight">
        {name}
        <Arrow class="duration-300 group-hover:translate-x-1" />
      </p>
    </a>
    <button class="description-toggle text-black/40 hover:text-black/60 transition-colors hidden text-lg font-medium">
      <span class="toggle-show">+</span>
      <span class="toggle-hide hidden">âˆ’</span>
    </button>
  </div>

  <!-- Introduction (collapsible in compact mode) -->
  <div class="description-wrapper">
    <div class="description-content mt-2 md:mt-3 text-sm text-black/60 leading-relaxed">
      <p>{description[0]}</p>
      {description.length > 1 && (
        <p class="hidden md:block mt-2">{description.slice(1).join(' ')}</p>
      )}
    </div>
  </div>
</div>
