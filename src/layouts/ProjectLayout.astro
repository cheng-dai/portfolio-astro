---
import { Icon } from 'astro-icon/components';
import { techStackIcons } from '../config/techIcons';
import Arrow from '@/components/Arrow.astro';
interface Props {
  name: string;
  description: string[];
  techStacks: string[];
  url: string;
  className?: string;
}
const { name, description, techStacks, url, className } = Astro.props;
---

<div
  class={`bg-amber-50 dark:bg-[#7f6301] overflow-hidden   rounded-3xl p-8 2xl:p-12 ${className}`}
>
  <!-- tech stack -->
  <div class='flex flex-wrap gap-6 mt-6 dark:text-zinc-100'>
 
    {
      techStacks.map((tech) => (
        <div class='flex font-medium text-zinc-950 dark:text-zinc-100 items-center'>
          <Icon name={`logos:${techStackIcons[tech]}`} title={tech} />
          <span class='ml-1.5'>{tech}</span>
        </div>
      ))
    }
  </div>
  <!-- link -->
  <a href={url} target='_blank'>
    <p
      class='text-2xl font-medium text-zinc-950 dark:text-zinc-100 lg:text-4xl mt-6 flex items-center gap-x-2'
    >
      {name}
      <Arrow class='hover:scale-120 duration-300' />
    </p>
  </a>
  <!-- Introduction -->
  <div
    class='text-lg text-zinc-500 dark:text-zinc-300 2xl:text-xl mt-6 text-pretty'
  >
    {description.map((paragraph) => <p class='mt-6'>{paragraph}</p>)}
  </div>
</div>
