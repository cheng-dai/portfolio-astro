import Arrow from "@/components/Arrow.astro";
---
<div
 
  class="lg:row-span-2  bg-zinc-100 dark:bg-zinc-900  overflow-hidden duration-300 shadow-xl dark:shadow-dark  rounded-3xl p-8 2xl:p-12">
  <!-- <div >
    <Image
      src={keyMotion}
