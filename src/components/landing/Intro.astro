---
import { Image } from 'astro:assets';
import Avatar from '../../images/avatar.jpg';
interface IntroProps {
  className?: string;
}
const { className } = Astro.props;
---

<div
  class={` bg-zinc-100 dark:bg-zinc-900 shadow-xl dark:shadow-dark rounded-3xl p-8 2xl:p-12 ${className}`}
>
  <div class='relative flex items-center gap-x-4 h-[48px]'>
    <Image src={Avatar} alt='#_' class='size-10 2xl:size-16 rounded-full' />
    <div class='text-sm 2xl:text-xl leading-6'>
      <p class='font-semibold text-zinc-950 dark:text-zinc-100'>
        <a href='#'>
          <span class='absolute inset-0'></span>
          Xucheng Dai
        </a>
      </p>
      <p class='text-zinc-500 dark:text-zinc-400'>Software Engineer</p>
    </div>
  </div>
  <p
    class='text-3xl mt-6 text-balance font-semibold lg:text-4xl text-zinc-950 dark:text-zinc-100'
  >
    Hey, I'm Cheng.
  </p>
  <p class='text-xl text-zinc-500 dark:text-zinc-300 2xl:text-2xl mt-6'>
    I use code making tools to make life easier, and more fun.
  </p>
  <p class='text-xl text-zinc-500 dark:text-zinc-300 2xl:text-2xl mt-6'>
    Outside of screens, I find peace and joy in bouldering, reading and talking
    to friends and my cat.
  </p>
  <!-- links -->
  <div class='grid grid-cols-3 gap-4 justify-around w-full mt-10 md:mt-20'>
    <a
      href='mailto:chengdai.dev@gmail.com'
      class='flex items-center justify-center dark:shadow-dark hover:bg-white dark:hover:bg-zinc-900 bg-zinc-50 dark:bg-zinc-800 rounded-2xl duration-300 group transition-all size-full min-w-12 min-h-12 2xl:min-h-20 2xl:min-w-20'
    >
      <svg
        xmlns='http://www.w3.org/2000/svg'
        class='icon icon-tabler size-6 2xl:size-16 group-hover:scale-125 duration-300 group-hover text-zinc-950 dark:text-zinc-400'
        width='1em'
        height='1em'
        viewBox='0 0 24 24'
        ><path
          fill='currentColor'
          d='M22 6c0-1.1-.9-2-2-2H4c-1.1 0-2 .9-2 2v12c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2zm-2 0l-8 5l-8-5zm0 12H4V8l8 5l8-5z'
        ></path></svg
      >
    </a>
    <a
      href='https://github.com/cheng-dai'
      target='_blank'
      class='flex items-center justify-center dark:shadow-dark hover:bg-white dark:hover:bg-zinc-900 bg-zinc-50 dark:bg-zinc-800 rounded-2xl duration-300 group transition-all size-full min-w-12 min-h-12 2xl:min-h-20 2xl:min-w-20'
    >
      <svg
        xmlns='http://www.w3.org/2000/svg'
        class='icon icon-tabler size-6 2xl:size-16 group-hover:scale-125 duration-300 group-hover text-zinc-950 dark:text-zinc-400'
        width='1em'
        height='1em'
        viewBox='0 0 24 24'
        ><path
          fill='currentColor'
          d='M12 2A10 10 0 0 0 2 12c0 4.42 2.87 8.17 6.84 9.5c.5.08.66-.23.66-.5v-1.69c-2.77.6-3.36-1.34-3.36-1.34c-.46-1.16-1.11-1.47-1.11-1.47c-.91-.62.07-.6.07-.6c1 .07 1.53 1.03 1.53 1.03c.87 1.52 2.34 1.07 2.91.83c.09-.65.35-1.09.63-1.34c-2.22-.25-4.55-1.11-4.55-4.92c0-1.11.38-2 1.03-2.71c-.1-.25-.45-1.29.1-2.64c0 0 .84-.27 2.75 1.02c.79-.22 1.65-.33 2.5-.33s1.71.11 2.5.33c1.91-1.29 2.75-1.02 2.75-1.02c.55 1.35.2 2.39.1 2.64c.65.71 1.03 1.6 1.03 2.71c0 3.82-2.34 4.66-4.57 4.91c.36.31.69.92.69 1.85V21c0 .27.16.59.67.5C19.14 20.16 22 16.42 22 12A10 10 0 0 0 12 2'
        ></path></svg
      >
    </a>
    <a
      href='https://www.linkedin.com/in/chengdai/'
      target='_blank'
      class='flex items-center justify-center dark:shadow-dark hover:bg-white dark:hover:bg-zinc-900 bg-zinc-50 dark:bg-zinc-800 rounded-2xl duration-300 group transition-all size-full min-w-12 min-h-12 2xl:min-h-20 2xl:min-w-20'
    >
      <svg
        xmlns='http://www.w3.org/2000/svg'
        class='icon icon-tabler size-6 2xl:size-16 group-hover:scale-125 duration-300 group-hover text-zinc-950 dark:text-zinc-400'
        width='1em'
        height='1em'
        viewBox='0 0 24 24'
        ><path
          fill='currentColor'
          d='M19 3a2 2 0 0 1 2 2v14a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2zm-.5 15.5v-5.3a3.26 3.26 0 0 0-3.26-3.26c-.85 0-1.84.52-2.32 1.3v-1.11h-2.79v8.37h2.79v-4.93c0-.77.62-1.4 1.39-1.4a1.4 1.4 0 0 1 1.4 1.4v4.93zM6.88 8.56a1.68 1.68 0 0 0 1.68-1.68c0-.93-.75-1.69-1.68-1.69a1.69 1.69 0 0 0-1.69 1.69c0 .93.76 1.68 1.69 1.68m1.39 9.94v-8.37H5.5v8.37z'
        ></path></svg
      >
      <astro-icon name='logos:linkedin'></astro-icon>
    </a>
  </div>
  <!-- CV -->
  <div class='w-full mt-8 md:max-w-xs lg:max-w-none'>
    <a
      href='/CV.pdf'
      data-astro-reload
      target='_blank'
      class='text-sm 2xl:text-lg py-2 w-full px-4 h-12 2xl:h-16 font-semibold focus:ring-2 rounded-2xl bg-zinc-950 dark:bg-zinc-100 dark:text-zinc-950 dark:hover:text-zinc-100 hover:text-zinc-950 dark:hover:bg-zinc-100/5 hover:bg-zinc-950/10 text-zinc-100 flex duration-200 focus:ring-offset-2 focus:ring-inline-flex items-center justify-center'
    >
      View my CV
    </a>
  </div>
</div>
